<!-- Page Title -->
<div class="page-title">
  <div class="container d-lg-flex justify-content-between align-items-center">
    <h1 class="mb-2 mb-lg-0">Blog</h1>
    <nav class="breadcrumbs">
      Our blog has <%= Article.public_count %> articles and counting!
    </nav>
  </div>
</div><!-- End Page Title -->

<section id="blog-posts" class="blog-posts section">

  <div class="container">

    <div class="row gy-4">

      <% @articles.each do |article| %>
        <% unless article.archived? %>
          <div class="col-lg-4">
            <article>

              <div class="post-img">
                <%= image_tag article.main_img, class: "img-fluid" if article.main_img.attached? %>
              </div>

              <p class="post-category"><%= article.category %></p>

              <h2 class="title">
                <%= link_to article.title, article %>
              </h2>

              <div class="d-flex align-items-center">
                <%= image_tag article.author.profile_image, alt: "", class: "img-fluid post-author-img flex-shrink-0" if article.author.profile_image.attached? %>
                <div class="post-meta">
                  <p class="post-author"><%= article.author.full_name %></p>
                  <p class="post-date">
                    <time datetime="<%= article.created_at %>"><%= article.created_at %></time>
                  </p>
                </div>
              </div>

            </article>
          </div><!-- End post list item -->
        <% end %>
      <% end %>
    </div>
  </div>
</section>

<%= link_to "New Article", new_article_path %>
